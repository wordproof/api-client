{
    "name": "wordproof/api-client",
    "description": "Wordproof API client",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Yurii Markovych",
            "email": "yurii@wordproof.com"
        }
    ],
    "require": {
        "php": "^7.1.3|^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "psr/http-client": "^1.0",
        "nyholm/psr7": "^1.4",
        "php-http/httplug": "^2.2"
    },
    "require-dev": {
        "spatie/ray": "^1.21",
        "phpunit/phpunit": "^9.5"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Using implementation of ClientInterface for package"
    },
    "autoload": {
        "psr-4": {
            "WordProof\\ApiClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WordProof\\ApiClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
